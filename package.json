    "jest": "^24.9.0",
    "prettier": "^1.15.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "ts-jest": "^24.0.2",
    "tslint": "5.16.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@eropple/bunyan-wrapper": "^0.1.2",
    "@eropple/rx-mailer": "^0.2.1"
